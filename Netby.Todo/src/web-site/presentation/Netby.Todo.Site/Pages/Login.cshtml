@page
@model Netby.Todo.Site.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow rounded-4 p-4" style="min-width: 350px; max-width: 380px;">
        <div class="card-body">
            <h2 class="text-center mb-4" style="font-weight: 600;">Login</h2>
            <form method="post" autocomplete="off">
                <div class="mb-3">
                    <label asp-for="LoginData.UserName" class="form-label">User</label>
                    <input asp-for="LoginData.UserName" class="form-control" placeholder="Enter user" required />
                </div>
                <div class="mb-3">
                    <label asp-for="LoginData.Password" class="form-label">Password</label>
                    <input asp-for="LoginData.Password" class="form-control" type="password" placeholder="Enter password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-2" style="font-weight:500;">Sign in</button>
            </form>
            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3 text-center p-2 rounded-3">
                    @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

@page
@model Netby.Todo.Site.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Iniciar Sesión</h1>
<form method="post">
    <input asp-for="LoginData.UserName" placeholder="Usuario" required />
    <input asp-for="LoginData.Password" type="password" placeholder="Contraseña" required />
    <button type="submit">Ingresar</button>
</form>
@if (Model.ErrorMessage != null)
{
    <div style="color:red">@Model.ErrorMessage</div>
}